@model GamerShop.Models.Movies.CreateCollectionViewModel

<h2>Создание подборки фильмов</h2>

<form asp-controller="Collection" asp-action="Create" method="post">
    <div class="forn-group">
        <label for="Title">Название подборки</label>
        <input type="text" class="form-control" id="Title" name="Title"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Описание подборки</label>
        <input type="text" id="Description" name="Description" />
    </div>
    <div class="form-group">
        <label>Выберите фильмы</label>
        @foreach (var movie in Model.AvailableMovies)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="Movie_@movie.Id" name="AvailableMovies[@movie.Id].IsSelected" value="true" />
                <label class="form-check-label" for="Movie_@movie.Id">@movie.Title</label>
            </div>
        }
        <span asp-validation-for="AvailableMovies" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Создать подборку</button>
</form>