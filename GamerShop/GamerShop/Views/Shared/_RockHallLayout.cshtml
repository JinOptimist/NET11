@using GamerShop.Services
@inject IAuthService authService

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark" class="backgroundImageLayout">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RockHall - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/RockHall/rockhall.css" asp-append-version="true" />

    @RenderSection("Style", false)
</head>
<body class="backgroundColorLayout">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GamerShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/RockHall/Index">Members Show</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/RockHall/NewRockMember"><span>New Member</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/RockBand/Show"><span>Bands Show</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/RockBand/NewRockBand"><span>New Band</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/RockBand/BandChooseMember"><span>Choose Member For Band</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - GamerShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            @RenderSection("AdditionalInfoInFooter", false)
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
