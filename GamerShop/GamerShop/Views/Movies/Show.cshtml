@model List<GamerShop.Models.Movies.ShowMovieViewModel>

@{
    if (Model.Count == 0)
    {
        <div>
            <p style="color: #555;">
                Ваш список любимых фильмов пуст.
            </p>
        </div>
    }
    else
    {
        <div>
            <p style="color: #333;">Любимые фильмы:<br/></P>
            <ul>
                @foreach (var movie in Model)
                {
                    <li style="margin-bottom: 10px; color: #444;">
                        @movie.Title
                        <i style="color: #95a5a6; margin-left: 5px;">Добавил @movie.UserName @movie.DateCreated.ToShortDateString()</i>
                        @Html.ActionLink("Удалить из списка",
                            "Remove",
                            "Movies",
                            new { id = movie.Id },
                            new { style = "color: #e74c3c; margin-left: 5px; text-decoration: none;" })
                    </li>
                }
            </ul>
        </div>
    }
    @Html.ActionLink("Добавить фильм",
        "Add",
        "Movies",
        null,
        new { style = "color: #3498db; text-decoration: none; " })
}