@using DALInterfaces.Models.Books;
@using GamerShop.Models.Books;
@model NewBookViewModel

@using (Html.BeginForm("Book", "Books", FormMethod.Post))
{
    <div>
        <div>
            Название книги
            @Html.TextBoxFor(model => model.Name)
        </div>
        <div>
            Автор
            @Html.ListBoxFor(x => x.SelectedAuthors, new MultiSelectList(Model.Authors, "Value", "Text"), new{ @class = "form-control" })
        </div>
        <div>
            Год выпуска
            @Html.TextBoxFor(model => model.YearOfIssue)
        </div>
        <div>
            <input type="submit" value="Добавить" />
        </div>
    </div>

    <script type="text/javascript">
        $(function () {
            // The Name() of the MultiSelect is used to get its client-side instance.
            var multiselect = $("#multiselect").data("kendoMultiSelect");
        });
    </script>
}