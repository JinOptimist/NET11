@using GamerShop.Models.RockHall;
@using GamerShop.Services;
@model PaginatorViewModel<InfoMemberViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = LayoutService.GetLayoutName(@ViewContext)?.LayoutName ?? Layout;
}

<div class="main-container">
    <h1><u>Members of the Rock and Roll Hall of Fame:</u></h1><br />
    @foreach (var rockMember in Model.Items)
    {
        <div>
            <span class="flex-container">
                <div class="title">
                    <h2>
                        @rockMember.FullName
                    </h2>
                </div>
                <div class="description">
                    Genre: @rockMember.Genre, Entry year: @rockMember.EntryYear, Year Of Birth: @rockMember.YearOfBirth
                    <span class="delete-link">
                        <a asp-action="Delete" asp-controller="RockHall" asp-route-id="@rockMember.Id">🗑</a>
                    </span>
                    <div>
                        @rockMember.FullName (Current Band : @rockMember.CurrentBandName)
                    </div>
                    <div>
                        Создал: @rockMember.CreatorName
                    </div>
                </div>

            </span>


        </div>
    }
</div>


<nav aria-label="...">
    <ul class="pagination pagination-sm">
        @foreach (var pageNumber in Model.AvailablePages)
        {
            <li class="page-item @(Model.Page == pageNumber ? "active" : "")">
                <a href="/RockHall/Index?page=@pageNumber" class="page-link" >@pageNumber</a>
            </li>
            
        }
    </ul>
</nav>

@section Style{
    <link rel="stylesheet" href="~/css/RockHall/index.css" />
}

@section AdditionalInfoInFooter{
    <span class="info-footer"> All Rock Members: @Model.Count PerPage: @Model.PerPage</span>
}

@section Scripts{
    <script src="~/js/RockHall/clickItem.js"></script>
}