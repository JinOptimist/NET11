@using GamerShop.Models.Football;
@using GamerShop.Services;
@model FootballClubViewModel<List<ShortFootballLeagueViewModel>>

@{
    Layout = LayoutService.GetLayoutName(@ViewContext)?.LayoutName ?? Layout;
}

@using (Html.BeginForm("NewClub", "FootballClubs", FormMethod.Post))
{
    <div>
        <div>
            Name
            @Html.TextBoxFor(model => model.Name)
        </div>
        <div>
            Stadium
            @Html.TextBoxFor(model => model.Stadium)
        </div>

        <div>
            <p>Select League</p>
            @Html.DropDownListFor(model => model.SelectedLigue,new SelectList(Model.FootballLeagueinfo,"Id","ShortName"))
        </div>

        <div>
            <input type="submit" value="Записать" />
        </div>
    </div>
}