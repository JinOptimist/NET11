@using GamerShop.Models.Football;
@model FootballClubViewModel

@using (Html.BeginForm("NewClub", "FootballClubs", FormMethod.Post))
{
    <div>
        <div>
            Name
            @Html.TextBoxFor(model => model.Name)
        </div>
        <div>
            Stadium
            @Html.TextBoxFor(model => model.Stadium)
        </div>
        <div>
            League
            @Html.TextBoxFor(model => model.FootballLeagueinfo.id)
            League name
            @Html.TextBoxFor(model => model.FootballLeagueinfo.ShortName)

        </div>

        <div>
            <input type="submit" value="Записать" />
        </div>
    </div>
}